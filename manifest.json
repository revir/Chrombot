{
    "manifest_version": 2,
    "name": "Chrombot",
    "description": "web scrawer",
    "permissions": ["tabs", "storage", "webRequest", "webRequestBlocking", "<all_urls>"],
    
    "background": {
        "scripts": [ "lib/socket.io.js", "lib/jquery-1.10.2-custom.js", "core-config.js", "chrombot.js", "core-rpc.js", "core-pagesManager.js", "core.js", "NeteaseMusic-core.js"]
    },
    
    "content_scripts": [{
        "js": ["lib/jquery-1.10.2-custom.js", "chrombot.js", "utils.js", "NeteaseMusic-page.js"],
        "matches": ["<all_urls>"]
    }],
    "options_page": "opt-chrombot.html",

    "icons":{
        "16": "images/chrombot-16.png",
        "48": "images/chrombot-48.png"
    },
    "minimum_chrome_version": "23",
    "version": "1.0",
    "update_url":"http://client2.google.com/service/update2/crx"
}